<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="attachment">
	<select id="sequence" resultType="int">
		select attachment_seq.nextval from dual
	</select>
	
	<insert id="insert" parameterType="AttachmentDto">
		insert into attachment(attachment_no, attachment_name, attachment_type, attachment_size)
		values(#{attachmentNo}, #{attachmentName}, #{attachmentType}, #{attachmentSize})
	</insert>
	
	<select id="find" parameterType="int" resultType="AttachmentDto">
		select * from attachment where attachment_no=#{attachmentNo}
	</select>
</mapper>