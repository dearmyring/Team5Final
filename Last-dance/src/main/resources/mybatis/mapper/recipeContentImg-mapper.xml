<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="recipeContentImg">
	<insert id="insert" parameterType="RecipeContentImgDto">
		insert into recipe_content_img(recipe_content_attachment_no, recipe_content_no) 
		values(#{recipeContentAttachmentNo}, #{recipeContentNo})
	</insert>
	
	<select id="find" parameterType="int" resultType="RecipeContentImgDto">
		select * from recipe_content_img where recipe_content_no=#{recipeContentNo}
	</select>
</mapper>